#!/bin/sh
BUILD_DIR=$1

echo "ğŸ”„ Replacing config/database.yml with config/database.ci.yml..."

if [ -f "$BUILD_DIR/config/database.ci.yml" ]; then
  cp "$BUILD_DIR/config/database.ci.yml" "$BUILD_DIR/config/database.yml"
  echo "âœ… Copied successfully."

  echo "ğŸ“„ Contents of config/database.ci.yml:"
  cat "$BUILD_DIR/config/database.ci.yml"
else
  echo "âŒ config/database.ci.yml not found!"
  exit 1
fi
